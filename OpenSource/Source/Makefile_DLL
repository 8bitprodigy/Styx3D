	$(OBJDIR)/A_Streak.o \
	$(OBJDIR)/Corona.o \
	$(OBJDIR)/Electric.o \
	$(OBJDIR)/Logo.o \
	$(OBJDIR)/LogoActor.o \
	$(OBJDIR)/Streak.o \
	$(OBJDIR)/BitmapList.o \
	$(OBJDIR)/Engine.o \
	$(OBJDIR)/FontBMP.o \
